        <!-- Debug indicator -->
        <div class="stats-debug" id="statsDebug"></div>
    </div>

<script>
        // DEBUG MODE - Set to false for production
        const DEBUG_MODE = false;
        
        // API Endpoints
        const API_ENDPOINTS = {
            stats: 'https://vaughnai.app.n8n.cloud/webhook/dumpster-crushr-wi-stats-webhook',
            form: 'https://vaughnai.app.n8n.cloud/webhook/dumpster-crushr-webhook',
            research: 'https://vaughnai.app.n8n.cloud/webhook/company-research-dc-wi'
        };

        // Authorized emails for form submissions
        const AUTHORIZED_EMAILS = [
            'hello@vaughnai.com',
            'marcus@dumpstercrushr.com',
            'brian@dumpstercrushr.com'
        ];

        // Global variables for data
        let dashboardData = {};
        let lastStatsLoad = 0;
        let statsLoading = false;
        const STATS_COOLDOWN = 10000; // 10 second minimum between calls

        // IMPROVED STATS LOADING WITH BETTER ERROR HANDLING
        async function loadDashboardStats() {
            // Prevent simultaneous calls
            if (statsLoading) {
                console.log('Stats already loading, skipping...');
                showDebugMessage('Loading in progress...', 'loading');
                return;
            }
            
            // Throttle calls - minimum 10 seconds between requests
            const now = Date.now();
            if (now - lastStatsLoad < STATS_COOLDOWN) {
                const remaining = Math.ceil((STATS_COOLDOWN - (now - lastStatsLoad)) / 1000);
                console.log(`Stats cooldown active. ${remaining}s remaining`);
                showDebugMessage(`Cooldown: ${remaining}s`, 'warning');
                return;
            }
            
            statsLoading = true;
            lastStatsLoad = now;
            
            try {
                // Show loading states
                setMetricStatuses('loading');
                const refreshBtn = document.querySelector('.refresh-btn');
                if (refreshBtn) {
                    refreshBtn.classList.add('loading');
                }
                
                showDebugMessage('Loading stats...', 'loading');
                
                if (DEBUG_MODE) {
                    console.log('🔧 DEBUG MODE: Using mock data');
                    const mockData = generateMockData();
                    updateDashboardDisplay(mockData);
                    showDebugMessage('Mock data loaded', 'success');
                    return;
                }
                
                console.log('📡 Loading dashboard stats from API...');
                const response = await fetch(API_ENDPOINTS.stats, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                console.log('✅ Dashboard data loaded:', data);
                
                // Validate data structure
                if (!validateStatsData(data)) {
                    throw new Error('Invalid data structure received');
                }
                
                dashboardData = data;
                updateDashboardDisplay(data);
                setMetricStatuses('success');
                showDebugMessage('Stats updated successfully', 'success');
                
            } catch (error) {
                console.error('❌ Error loading dashboard stats:', error);
                setMetricStatuses('error');
                showDebugMessage(`Error: ${error.message}`, 'error');
                
                // Show fallback data with warning
                const fallbackData = generateMockData();
                updateDashboardDisplay(fallbackData);
            } finally {
                statsLoading = false;
                // Remove loading state from refresh button
                const refreshBtn = document.querySelector('.refresh-btn');
                if (refreshBtn) {
                    refreshBtn.classList.remove('loading');
                }
            }
        }

        // VALIDATE STATS DATA STRUCTURE
        function validateStatsData(data) {
            const requiredFields = ['newLeads', 'claimedLeads', 'wonLeads', 'inCommunication'];
            return requiredFields.every(field => data.hasOwnProperty(field) && typeof data[field] === 'number');
        }

        // SET METRIC STATUS INDICATORS
        function setMetricStatuses(status) {
            const statusElements = ['newLeadsStatus', 'wonLeadsStatus', 'claimedLeadsStatus', 'inCommunicationStatus'];
            statusElements.forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.className = `metric-status ${status}`;
                }
            });
        }

        // SHOW DEBUG MESSAGES
        function showDebugMessage(message, type) {
            const debugEl = document.getElementById('statsDebug');
            if (debugEl) {
                debugEl.textContent = message;
                debugEl.className = `stats-debug show ${type}`;
                
                setTimeout(() => {
                    debugEl.classList.remove('show');
                }, 3000);
            }
        }

        // UPDATE DASHBOARD DISPLAY
        function updateDashboardDisplay(data) {
            try {
                console.log('🎨 Updating dashboard display with data:', data);
                
                // Lead Performance Metrics
                updateElement('newLeads', data.newLeads || 0);
                updateElement('claimedLeads', data.claimedLeads || 0);
                updateElement('inCommunication', data.inCommunication || 0);
                updateElement('wonLeads', data.wonLeads || 0);
                
                // System Performance Metrics
                updateElement('avgContactsPerCompany', data.avgContactsPerCompany || '0.0');
                
                const conversionRate = data.conversionRate || '0%';
                updateElement('conversionRate', conversionRate);
                const conversionNum = parseInt(conversionRate.replace('%', '')) || 0;
                updateProgressBar('conversionProgress', conversionNum);
                
                console.log('✅ Dashboard display updated successfully');
                
            } catch (error) {
                console.error('❌ Error updating dashboard display:', error);
                showDebugMessage('Display update failed', 'error');
            }
        }

        // HELPER FUNCTIONS
        function updateElement(id, value) {
            const element = document.getElementById(id);
            if (element) {
                element.textContent = value;
            } else {
                console.warn(`Element with id '${id}' not found`);
            }
        }

        function updateProgressBar(id, percentage) {
            const element = document.getElementById(id);
            if (element) {
                element.style.width = `${Math.min(100, Math.max(0, percentage))}%`;
            }
        }

        // MOCK DATA GENERATOR FOR TESTING
        function generateMockData() {
            return {
                newLeads: 12,
                claimedLeads: 8,
                wonLeads: 3,
                inCommunication: 5,
                totalContacts: 18,
                avgContactsPerCompany: '3.2',
                conversionRate: '67%'
            };
        }
// SEARCH TYPE TOGGLE FUNCTIONALITY
let currentSearchType = 'industry_location';

function initializeToggle() {
    const toggleIndustryLocation = document.getElementById('toggleIndustryLocation');
    const toggleCompanyResearch = document.getElementById('toggleCompanyResearch');
    const industryLocationSection = document.getElementById('industryLocationSection');
    const companyResearchSection = document.getElementById('companyResearchSection');
    
    toggleIndustryLocation.addEventListener('click', () => {
        currentSearchType = 'industry_location';
        toggleIndustryLocation.classList.add('active');
        toggleCompanyResearch.classList.remove('active');
        industryLocationSection.classList.remove('hidden');
        companyResearchSection.classList.add('hidden');
        updateFormTitle();
    });
    
    toggleCompanyResearch.addEventListener('click', () => {
        currentSearchType = 'company_research';
        toggleCompanyResearch.classList.add('active');
        toggleIndustryLocation.classList.remove('active');
        companyResearchSection.classList.remove('hidden');
        industryLocationSection.classList.add('hidden');
        updateFormTitle();
    });
}

function updateFormTitle() {
    const formTitle = document.querySelector('.form-title');
    const formSubtitle = document.querySelector('.form-subtitle');
    
    if (currentSearchType === 'company_research') {
        formTitle.textContent = 'Company Research';
        formSubtitle.textContent = 'Research specific companies and find similar alternatives in Wisconsin';
    } else {
        formTitle.textContent = 'Generate New Prospects';
        formSubtitle.textContent = 'Find Wisconsin businesses that need mobile dumpster compaction services';
    }
}

        // EMAIL VALIDATION
        function isAuthorizedEmail(email) {
            return AUTHORIZED_EMAILS.includes(email.toLowerCase().trim());
        }

        // FORM SUBMISSION HANDLER
        async function handleFormSubmission(event) {
            event.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const loadingDiv = document.getElementById('loadingDiv');
            const messageDiv = document.getElementById('messageDiv');
            const form = document.getElementById('prospectForm');
            const userEmail = document.getElementById('userEmail').value.trim();
            
            // Validate email first
            if (!userEmail) {
                showMessage('Please enter your email address.', 'error');
                return;
            }
            
            if (!isAuthorizedEmail(userEmail)) {
                showMessage('Access denied. Please contact support for authorization.', 'error');
                return;
            }
            
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(userEmail)) {
                showMessage('Please enter a valid email address.', 'error');
                return;
            }
            
            let formData;
            let endpoint;
            
            if (currentSearchType === 'company_research') {
                // Company Research Mode
                const companyName = document.getElementById('companyName').value.trim();
                const companyLocation = document.getElementById('companyLocation').value;
                
                if (!companyName || !companyLocation) {
                    showMessage('Please fill in both company name and location.', 'error');
                    return;
                }
                
                formData = {
                    search_type: 'company_name',
                    company_name: companyName,
                    location: companyLocation,
                    user_id: userEmail,
                    timestamp: new Date().toISOString(),
                    source: 'dumpstercrushr-dashboard-research'
                };
                endpoint = API_ENDPOINTS.research;
                
            } else {
                // Industry + Location Mode
                const location = document.getElementById('location').value;
                const industry = document.getElementById('industry').value;
                
                if (!location || !industry) {
                    showMessage('Please select both location and industry.', 'error');
                    return;
                }
                
                formData = {
                    location: location,
                    industry: industry,
                    user_id: userEmail,
                    timestamp: new Date().toISOString(),
                    source: 'dumpstercrushr-dashboard'
                };
                endpoint = API_ENDPOINTS.form;
            }
            
            try {
                // Show loading state
                submitBtn.disabled = true;
                submitBtn.textContent = currentSearchType === 'company_research' ? 'Researching Company...' : 'Generating Leads...';
                loadingDiv.style.display = 'block';
                messageDiv.style.display = 'none';
                
                console.log('📤 Submitting form data:', formData);
                
                // Submit to appropriate n8n webhook
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const result = await response.json();
                console.log('✅ Form submission successful:', result);
                
                // Show success message
                const successMessage = currentSearchType === 'company_research' 
                    ? '🔍 Company research started! Check your email for detailed analysis.'
                    : '🎯 Lead generation started! Check your email for results.';
                showMessage(successMessage, 'success');
                
                // Reset form
                form.reset();
                
                // Refresh dashboard data after successful submission
                setTimeout(() => {
                    loadDashboardStats();
                }, 2000);
                
            } catch (error) {
                console.error('❌ Form submission error:', error);
                const errorMessage = currentSearchType === 'company_research'
                    ? 'Error starting company research. Please try again or contact support.'
                    : 'Error generating leads. Please try again or contact support.';
                showMessage(errorMessage, 'error');
            } finally {
                // Reset loading state
                submitBtn.disabled = false;
                submitBtn.textContent = currentSearchType === 'company_research' ? '🔍 Research Company' : '🎯 Generate Leads';
                loadingDiv.style.display = 'none';
            }
            }
            
        // MESSAGE DISPLAY HELPER
        function showMessage(message, type = 'info') {
            const messageDiv = document.getElementById('messageDiv');
            if (messageDiv) {
                messageDiv.textContent = message;
                messageDiv.className = `message-state ${type}`;
                messageDiv.style.display = 'block';
                
                // Auto-hide success messages after 5 seconds
                if (type === 'success') {
                    setTimeout(() => {
                        messageDiv.style.display = 'none';
                    }, 5000);
                }
            }
        }

        // EMAIL VALIDATION HELPER
        function validateEmailField() {
            const emailInput = document.getElementById('userEmail');
            const emailValidation = document.getElementById('emailValidation');
            const email = emailInput.value.trim();
            
            if (email) {
                if (!isAuthorizedEmail(email)) {
                    emailInput.className = 'form-input invalid';
                    emailValidation.className = 'validation-message error';
                    emailValidation.textContent = '❌ This email is not authorized. Contact support for access.';
                    emailValidation.style.display = 'flex';
                } else {
                    emailInput.className = 'form-input valid';
                    emailValidation.className = 'validation-message success';
                    emailValidation.textContent = '✅ Email authorized';
                    emailValidation.style.display = 'flex';
                }
            } else {
                emailInput.className = 'form-input';
                emailValidation.style.display = 'none';
            }
        }
        
        // INITIALIZE EVENT LISTENERS
        // INITIALIZE EVENT LISTENERS
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 DumpsterCrushr Dashboard initialized');
            loadDashboardStats();
            
            // Initialize toggle functionality
            initializeToggle();
            
            // Form submission
            const form = document.getElementById('prospectForm');
            if (form) {
                form.addEventListener('submit', handleFormSubmission);
            }
            
            // Email validation on blur and input
            const emailInput = document.getElementById('userEmail');
            if (emailInput) {
                emailInput.addEventListener('blur', validateEmailField);
                emailInput.addEventListener('input', validateEmailField);
            }
            
            // Refresh button click
            const refreshBtn = document.querySelector('.refresh-btn');
            if (refreshBtn) {
                refreshBtn.addEventListener('click', loadDashboardStats);
            }
            
            console.log('✅ All event listeners initialized');
        });
            
        console.log('🎉 DumpsterCrushr Dashboard fully loaded and ready!');
    </script>
</body>
</html>
