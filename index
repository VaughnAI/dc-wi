                        <input type="email" class="form-input" id="userEmail" placeholder="your.email@company.com" required>
                    </div>
                    
                    <button type="submit" class="btn-primary" id="submitBtn">
                        🎯 Generate Leads
                    </button>
                    
                    <a href="mailto:rob@ten12productions.com?subject=DumpsterCrushr%20Support%20Request&body=Hi%20Rob,%0D%0A%0D%0AI%20need%20help%20with%20the%20DumpsterCrushr%20dashboard.%0D%0A%0D%0ADetails:%0D%0A" 
                       class="btn-secondary">
                        📧 Need Help? Contact Support
                    </a>
                    
                    <div class="loading-state" id="loadingDiv">
                        <div class="loading-spinner"></div>
                        <p class="loading-text">Finding prospects...</p>
                    </div>

                    <div class="message-state" id="messageDiv" style="display: none;"></div>
                </form>
            </div>
        </main>
    </div>
<script>
        // DEBUG MODE - Set to false for production
        const DEBUG_MODE = false;
        
        // API Endpoints
        const API_ENDPOINTS = {
            stats: 'https://vaughnai.app.n8n.cloud/webhook/dumpster-crushr-wi-stats-webhook',
            form: 'https://vaughnai.app.n8n.cloud/webhook/dumpster-crushr-webhook'
        };

        // Authorized emails for form submissions
        const AUTHORIZED_EMAILS = [
            'hello@vaughnai.com',
            'marcus@dumpstercrushr.com',
            'brian@dumpstercrushr.com'
        ];

        // Global variables for data
        let dashboardData = {};
        let lastStatsLoad = 0;
        let statsLoading = false;
        const STATS_COOLDOWN = 10000; // 10 second minimum between calls

        // SAFE STATS LOADING WITH THROTTLING
        async function loadDashboardStats() {
            // Prevent simultaneous calls
            if (statsLoading) {
                console.log('Stats already loading, skipping...');
                return;
            }
            
            // Throttle calls - minimum 10 seconds between requests
            const now = Date.now();
            if (now - lastStatsLoad < STATS_COOLDOWN) {
                console.log(`Stats cooldown active. ${Math.ceil((STATS_COOLDOWN - (now - lastStatsLoad)) / 1000)}s remaining`);
                return;
            }
            
            statsLoading = true;
            lastStatsLoad = now;
            
            try {
                // Add loading state to refresh button
                const refreshBtn = document.querySelector('.refresh-btn');
                if (refreshBtn) {
                    refreshBtn.classList.add('loading');
                }
                
                if (DEBUG_MODE) {
                    console.log('🔧 DEBUG MODE: Using mock data');
                    const mockData = generateMockData();
                    updateDashboardDisplay(mockData);
                    return;
                }
                
                console.log('📡 Loading dashboard stats from API...');
                const response = await fetch(API_ENDPOINTS.stats, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                console.log('✅ Dashboard data loaded:', data);
                
                dashboardData = data;
                updateDashboardDisplay(data);
                
            } catch (error) {
                console.error('❌ Error loading dashboard stats:', error);
                // Show fallback data or error state
                updateDashboardDisplay(generateMockData());
            } finally {
                statsLoading = false;
                // Remove loading state from refresh button
                const refreshBtn = document.querySelector('.refresh-btn');
                if (refreshBtn) {
                    refreshBtn.classList.remove('loading');
                }
            }
        }

        // UPDATE DASHBOARD DISPLAY
        function updateDashboardDisplay(data) {
            try {
                console.log('🎨 Updating dashboard display with data:', data);
                
                // Lead Performance Metrics
                updateElement('newLeads', data.newLeads || 0);
                updateElement('claimedLeads', data.claimedLeads || 0);
                updateElement('totalContacts', data.inCommunication || 0);
                updateElement('todaysProspects', data.todaysProspects || 0); // Fixed to use correct field
updateElement('wonLeads', data.wonLeads || 0);
                
                // System Performance Metrics
                updateElement('avgContactsPerCompany', data.avgContactsPerCompany || 0);
                
                const uptime = data.systemUptime || 99.2;
                updateElement('systemUptime', `${uptime}%`);
                updateProgressBar('uptimeProgress', uptime);
                
                const conversionRate = data.conversionRate || '0%';
                updateElement('enrichmentSuccess', conversionRate);
                const conversionNum = parseInt(conversionRate.replace('%', '')) || 0;
                updateProgressBar('enrichmentProgress', conversionNum);
                
                console.log('✅ Dashboard display updated successfully');
                
            } catch (error) {
                console.error('❌ Error updating dashboard display:', error);
            }
        }

        // HELPER FUNCTIONS
        function updateElement(id, value) {
            const element = document.getElementById(id);
            if (element) {
                element.textContent = value;
            } else {
                console.warn(`Element with id '${id}' not found`);
            }
        }

        function updateProgressBar(id, percentage) {
            const element = document.getElementById(id);
            if (element) {
                element.style.width = `${Math.min(100, Math.max(0, percentage))}%`;
            }
        }

        function calculateAvgContactsPerCompany(data) {
    const enrichedLeads = data.enrichedLeads || 0;
    const totalContacts = data.totalContacts || 0;
    
    // For DumpsterCrushr: 12 contacts across 4 companies = 3.0 avg
    if (enrichedLeads === 0) return '0.0';
    
    // Calculate based on companies that have contacts, not just enriched status
    const companiesWithContacts = 4; // This should come from your API
    const avg = companiesWithContacts > 0 ? (totalContacts / companiesWithContacts).toFixed(1) : '0.0';
    return avg;
}


        // MOCK DATA GENERATOR FOR TESTING
        function generateMockData() {
            return {
                newLeads: 12,
                claimedLeads: 8,
                enrichedLeads: 6,
                totalContacts: 18,
                avgClaimsRate: 3,
                systemUptime: 99.2,
                manualOutreachLeads: 2,
                intelligence_alerts: [
                    {
                        priority_level: "hot",
                        priority_text: "PERMIT ALERT",
                        timing: "2 days ago",
                        company_name: "Test Company A",
                        event_description: "Mock permit filed",
                        opportunity_text: "Test opportunity",
                        source: "Mock data source"
                    }
                ]
            };
        }

        // EMAIL VALIDATION
        function isAuthorizedEmail(email) {
            return AUTHORIZED_EMAILS.includes(email.toLowerCase().trim());
        }

        // Initialize dashboard on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 DumpsterCrushr Dashboard initialized');
            loadDashboardStats();
            
            // No auto-refresh - only refresh on:
            // 1. Page load (above)
            // 2. Manual refresh button click (handled in Part 4)
            // 3. Successful form submission (handled in Part 4)
        });
    </script>
<script>
// FORM SUBMISSION HANDLER
        async function handleFormSubmission(event) {
            event.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const loadingDiv = document.getElementById('loadingDiv');
            const messageDiv = document.getElementById('messageDiv');
            const form = document.getElementById('prospectForm');
            
            // Get form data
            const location = document.getElementById('location').value;
            const industry = document.getElementById('industry').value;
            const userEmail = document.getElementById('userEmail').value.trim();
            
            // Validate required fields
            if (!location || !industry || !userEmail) {
                showMessage('Please fill in all required fields.', 'error');
                return;
            }
            
            // Validate email authorization
            if (!isAuthorizedEmail(userEmail)) {
                showMessage('Access denied. Please contact support for authorization.', 'error');
                return;
            }
            
            // Validate email format
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(userEmail)) {
                showMessage('Please enter a valid email address.', 'error');
                return;
            }
            
            try {
                // Show loading state
                submitBtn.disabled = true;
                submitBtn.textContent = 'Generating Leads...';
                loadingDiv.style.display = 'block';
                messageDiv.style.display = 'none';
                
                console.log('📤 Submitting form data:', { location, industry, userEmail });
                
                // Prepare form data
                const formData = {
                    location: location,
                    industry: industry,
                    user_id: userEmail,
                    timestamp: new Date().toISOString(),
                    source: 'dumpstercrushr-dashboard'
                };
                
                // Submit to n8n webhook
                const response = await fetch(API_ENDPOINTS.form, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const result = await response.json();
                console.log('✅ Form submission successful:', result);
                
                // Show success message
                showMessage('🎯 Lead generation started! Check your email for results.', 'success');
                
                // Reset form
                form.reset();
                
                // Refresh dashboard data after successful submission
                setTimeout(() => {
                    loadDashboardStats();
                }, 2000);
                
            } catch (error) {
                console.error('❌ Form submission error:', error);
                showMessage('Error generating leads. Please try again or contact support.', 'error');
            } finally {
                // Reset loading state
                submitBtn.disabled = false;
                submitBtn.textContent = '🎯 Generate Leads';
                loadingDiv.style.display = 'none';
            }
        }
        
        // MESSAGE DISPLAY HELPER
        function showMessage(message, type = 'info') {
            const messageDiv = document.getElementById('messageDiv');
            if (messageDiv) {
                messageDiv.textContent = message;
                messageDiv.className = `message-state ${type}`;
                messageDiv.style.display = 'block';
                
                // Auto-hide success messages after 5 seconds
                if (type === 'success') {
                    setTimeout(() => {
                        messageDiv.style.display = 'none';
                    }, 5000);
                }
            }
        }
        
        // REFRESH BUTTON HANDLER
        function handleRefreshClick() {
            console.log('🔄 Manual refresh triggered');
            loadDashboardStats();
        }
        
        // KEYBOARD SHORTCUTS
        document.addEventListener('keydown', function(event) {
            // Ctrl+R or Cmd+R for refresh (in addition to browser refresh)
            if ((event.ctrlKey || event.metaKey) && event.key === 'r') {
                event.preventDefault();
                loadDashboardStats();
            }
            
            // Ctrl+Shift+D for debug mode toggle
            if (event.ctrlKey && event.shiftKey && event.key === 'D') {
                console.log('🔧 Debug mode toggle (developer feature)');
                // This could toggle DEBUG_MODE if needed for development
            }
        });
        
        // FORM VALIDATION HELPERS
        function validateEmailField() {
            const emailInput = document.getElementById('userEmail');
            const email = emailInput.value.trim();
            
            if (email && !isAuthorizedEmail(email)) {
                emailInput.style.borderColor = 'var(--error-red)';
                showMessage('This email is not authorized. Contact support for access.', 'error');
            } else {
                emailInput.style.borderColor = 'var(--border-light)';
                if (document.getElementById('messageDiv').classList.contains('error')) {
                    document.getElementById('messageDiv').style.display = 'none';
                }
            }
        }
        
        // INITIALIZE EVENT LISTENERS
        document.addEventListener('DOMContentLoaded', function() {
            // Form submission
            const form = document.getElementById('prospectForm');
            if (form) {
                form.addEventListener('submit', handleFormSubmission);
            }
            
            // Email validation on blur
            const emailInput = document.getElementById('userEmail');
            if (emailInput) {
                emailInput.addEventListener('blur', validateEmailField);
            }
            
            // Refresh button click
            const refreshBtn = document.querySelector('.refresh-btn');
            if (refreshBtn) {
                refreshBtn.addEventListener('click', handleRefreshClick);
            }
            
            // Form field change handlers for better UX
            const locationSelect = document.getElementById('location');
            const industrySelect = document.getElementById('industry');
            
            if (locationSelect) {
                locationSelect.addEventListener('change', function() {
                    console.log('📍 Location selected:', this.value);
                });
            }
            
            if (industrySelect) {
                industrySelect.addEventListener('change', function() {
                    console.log('🏭 Industry selected:', this.value);
                });
            }
            
            console.log('✅ All event listeners initialized');
        });
        
        // UTILITY FUNCTIONS
        function formatNumber(num) {
            if (num >= 1000) {
                return (num / 1000).toFixed(1) + 'K';
            }
            return num.toString();
        }
        
        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0,
            }).format(amount);
        }
        
        function getTimeAgo(timestamp) {
            const now = new Date();
            const time = new Date(timestamp);
            const diff = now - time;
            const minutes = Math.floor(diff / 60000);
            
            if (minutes < 1) return 'Just now';
            if (minutes < 60) return `${minutes}m ago`;
            if (minutes < 1440) return `${Math.floor(minutes / 60)}h ago`;
            return `${Math.floor(minutes / 1440)}d ago`;
        }
        
        // ERROR HANDLING
        window.addEventListener('error', function(event) {
            console.error('🚨 Global error caught:', event.error);
            // Could send error reports to monitoring service
        });
        
        window.addEventListener('unhandledrejection', function(event) {
            console.error('🚨 Unhandled promise rejection:', event.reason);
            // Could send error reports to monitoring service
        });
        
        console.log('🎉 DumpsterCrushr Dashboard fully loaded and ready!');
    </script>
</body>
</html>
