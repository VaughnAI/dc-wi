    <!-- Company Research Section -->
    <div class="form-section hidden" id="companyResearchSection">
        <div class="form-group">
            <label class="form-label">Target Company Name</label>
            <div class="company-input-container">
                <input type="text" class="form-input" id="companyName" placeholder="e.g., Johnson Controls">
            </div>
            <div class="form-help-text">
                Enter partial company names - we'll find matches like "Johnson Controls Co" or "Jonson Contrls"
            </div>
        </div>
        
        <div class="form-group">
            <label class="form-label">Company Location</label>
            <select class="form-select" id="companyLocation">
                <option value="">Select Your Market</option>
                <option value="Milwaukee, WI">Milwaukee, WI</option>
                <option value="Madison, WI">Madison, WI</option>
                <option value="Appleton, WI">Appleton, WI</option>
            </select>
        </div>
    </div>
    
    <div class="form-group">
        <label class="form-label">Your Email</label>
        <input type="email" class="form-input" id="userEmail" placeholder="your.email@company.com" required>
        <div class="validation-message" id="emailValidation" style="display: none;"></div>
    </div>
    
    <button type="submit" class="btn-primary" id="submitBtn">
        🎯 Generate Leads
    </button>
    
    <a href="mailto:rob@ten12productions.com?subject=DumpsterCrushr%20Support%20Request&body=Hi%20Rob,%0D%0A%0D%0AI%20need%20help%20with%20the%20DumpsterCrushr%20dashboard.%0D%0A%0D%0ADetails:%0D%0A" 
       class="btn-secondary">
        📧 Need Help? Contact Support
    </a>
    
    <div class="loading-state" id="loadingDiv">
        <div class="loading-spinner"></div>
        <p class="loading-text">Finding prospects...</p>
